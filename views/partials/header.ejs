<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<link rel="stylesheet" href="/stylesheets/main.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400" rel="stylesheet">
<script src="/static/jquery-3.3.1.min.js"></script>

<!-- If appropriate, show the metadata right below the header-->
<script>
    // Load and display any available metadata
    window.onload = function() {
        var metadataString = "";
        var insert_extra_break = false;
        var metadata = document.getElementsByTagName("meta");
        if (metadata.author) {
            metadataString += `By ${metadata.author.content}`;
            insert_extra_break = true;
        }

        if (metadata.date) {
            var date_obj = new Date(metadata.date.content);
            if (insert_extra_break) {
                metadataString += `<br><br>Published: ${date_obj.toDateString()}`;
            } else {
                metadataString += `Published: ${date_obj.toDateString()}`;
            }
            insert_extra_break = true;
        }

        if (metadata.updated) { // 
            var date_obj = new Date(metadata.updated.content);
            if (insert_extra_break) {
                metadataString += `<br><br>Updated: ${date_obj.toDateString()}`;
            } else {
                metadataString += `Updated: ${date_obj.toDateString()}`;
            }
        }

        var element = document.getElementsByTagName("h1")[0]
        if (element) {
            element.insertAdjacentHTML(
                "afterend", `<p class='meta_string'>${metadataString}</p>`
            );
        }
    }
</script>